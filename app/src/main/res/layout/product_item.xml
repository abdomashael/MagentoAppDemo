<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/product_linearLayout"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/product_item_margin">

    <include layout="@layout/product_item_top_layout" />

    <include
        android:id="@+id/without_size_layout"
        layout="@layout/product_item_without_size" />

    <include
        android:id="@+id/with_size_layout"
        layout="@layout/product_item_with_size" />

    <include layout="@layout/product_item_bottom_layout" />
</LinearLayout>