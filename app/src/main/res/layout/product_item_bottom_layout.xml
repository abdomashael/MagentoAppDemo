<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/product_item">

    <Button
        android:id="@+id/addBtn"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/baseline_add_shopping_cart_24"
        android:drawablePadding="2dp"
        android:drawableTint="@android:color/white"
        android:gravity="center"
        android:padding="4dp"
        android:text="add to card"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/wishListBtn"
        android:layout_marginStart="@dimen/product_main_margin"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/baseline_favorite_24" />

    <ImageButton
        android:id="@+id/compareBtn"
        android:layout_marginStart="@dimen/product_main_margin"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/baseline_bar_chart_24" />


</LinearLayout>
